<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background circle (inside part) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />  <!-- Fill color -->
        </shape>
    </item>

    <!-- Border circle -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="6dp"
                android:color="@color/colorGreen" />  <!-- Border color -->
            <!-- Optional: Adjust size -->
            <size android:width="100dp" android:height="100dp"/>
        </shape>
    </item>

</layer-list>
