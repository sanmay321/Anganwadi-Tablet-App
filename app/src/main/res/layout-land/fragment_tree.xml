<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/treeImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_tree_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="500dp"
        android:layout_marginEnd="@dimen/size_40"
        app:layout_constraintTop_toBottomOf="@id/bottomGuideline"
        app:layout_constraintWidth_max="500dp"
        app:layout_constraintWidth_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cldropTarget1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/treeImage"
        app:layout_constraintEnd_toEndOf="@id/treeImage"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="@id/treeImage"
        app:layout_constraintTop_toTopOf="@id/treeImage"
        app:layout_constraintVertical_bias="0.37"
        app:layout_constraintWidth_percent="0.2">

        <ImageView
            android:id="@+id/dropTarget1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/circle_white_border_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_green"
            android:paddingHorizontal="8dp"
            android:text="Grandpa"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/dropTarget1"
            app:layout_constraintEnd_toEndOf="@id/dropTarget1"
            app:layout_constraintStart_toStartOf="@id/dropTarget1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cldropTarget2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/treeImage"
        app:layout_constraintEnd_toEndOf="@id/treeImage"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="@id/treeImage"
        app:layout_constraintTop_toTopOf="@id/treeImage"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintWidth_percent="0.2">

        <ImageView
            android:id="@+id/dropTarget2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/circle_white_border_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_green"
            android:paddingHorizontal="8dp"
            android:text="Grandma"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/dropTarget2"
            app:layout_constraintEnd_toEndOf="@id/dropTarget2"
            app:layout_constraintStart_toStartOf="@id/dropTarget2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Drag family members correctly to complete the tree."
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/center"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <!-- Grandpa -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clGrandpa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toStartOf="@id/clGrandma"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerText">

            <ImageView
                android:id="@+id/imgGrandpa"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_green_border_green"
                android:src="@drawable/baseline_man_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvGrandpa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Grandpa"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="@id/imgGrandpa"
                app:layout_constraintStart_toStartOf="@id/imgGrandpa"
                app:layout_constraintTop_toBottomOf="@id/imgGrandpa" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Grandma -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clGrandma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toStartOf="@id/clSon"
            app:layout_constraintStart_toEndOf="@id/clGrandpa"
            app:layout_constraintTop_toBottomOf="@id/headerText">

            <ImageView
                android:id="@+id/imgGrandma"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_green_border_green"
                android:src="@drawable/baseline_woman_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvGrandma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Grandma"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="@id/imgGrandma"
                app:layout_constraintStart_toStartOf="@id/imgGrandma"
                app:layout_constraintTop_toBottomOf="@id/imgGrandma" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- Son -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/clGrandma"
            app:layout_constraintTop_toBottomOf="@id/headerText">

            <ImageView
                android:id="@+id/imgSon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_green_border_green"
                android:src="@drawable/baseline_woman_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Son"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="@id/imgSon"
                app:layout_constraintStart_toStartOf="@id/imgSon"
                app:layout_constraintTop_toBottomOf="@id/imgSon" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Dad -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clDad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="@id/clGrandma"
            app:layout_constraintStart_toStartOf="@id/clGrandpa"
            app:layout_constraintTop_toBottomOf="@id/clGrandpa">

            <ImageView
                android:id="@+id/imgDad"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_green_border_green"
                android:src="@drawable/baseline_man_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Dad"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="@id/imgDad"
                app:layout_constraintStart_toStartOf="@id/imgDad"
                app:layout_constraintTop_toBottomOf="@id/imgDad" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Mom -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clMom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="@id/clSon"
            app:layout_constraintStart_toStartOf="@id/clGrandma"
            app:layout_constraintTop_toBottomOf="@id/clGrandma">

            <ImageView
                android:id="@+id/imgMom"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_green_border_green"
                android:src="@drawable/baseline_woman_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvMom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Mom"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="@id/imgMom"
                app:layout_constraintStart_toStartOf="@id/imgMom"
                app:layout_constraintTop_toBottomOf="@id/imgMom" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
